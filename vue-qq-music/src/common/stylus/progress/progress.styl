@import "~common/stylus/variable"
.progress-bar
  height: 30px
  .progress-inner
    position: relative
    top: 13px
    height: 4px
    border-radius: 4px
    background: rgba(0, 0, 0, 0.3)
    .progress
      position: absolute
      height: 100%
      border-radius: 4px
      background: $color-theme
    .progress-btn-wrapper
      position: absolute
      top: -13px
      left: -8px
      width: 30px
      height: 30px
      .progress-btn
        position: relative
        box-sizing: border-box
        width: 16px
        height: 16px
        top: 7px
        left: 7px
        border: 3px solid $color-text
        border-radius: 50%
        background: $color-theme